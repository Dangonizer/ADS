{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "C/C++: Compile",
      "command": "g++",
      "args": [
        "-g",
        "-std=c++17",
        "-Wall",
        "-fdiagnostics-color=always",
        "-I.",
        "-o",
        "${fileBasenameNoExtension}",
        "*.cpp",
        "-pthread"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by C++ GIP Projects Extension."
    },
    {
      "type": "shell",
      "label": "C/C++: Compile Release",
      "command": "g++",
      "args": [
        "-O3",
        "-std=c++17",
        "-Wall",
        "-fdiagnostics-color=always",
        "-I.",
        "-o",
        "${fileBasenameNoExtension}_release",
        "*.cpp",
        "-pthread"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by C++ GIP Projects Extension."
    }
  ]
